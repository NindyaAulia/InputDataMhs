<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/sa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Copyright &#169; 2016 Nindya Aulia A."
        android:textSize="@dimen/font1"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/d"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.24"
        android:text="This application is made for my final semester work in semester 5"
        android:textSize="@dimen/font1"
        tools:ignore="HardcodedText,InefficientWeight,SpUsage" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />
</LinearLayout>
